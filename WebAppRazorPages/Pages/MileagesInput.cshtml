@page
@model Project.Pages.MileagesInputModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ввод пробегов для Т/С</title>
    <!-- Подключение Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Ввод пробега</h1>
        <form method="post">
            <div class="form-group">
                <label for="brandMotocycle">Марка мотоцикла:</label>
                <input type="text" id="brandMotocycle" name="brandMotocycle" class="form-control" value="@Model.Motocycle.BrandMotocycle" readonly />
            </div>
            <div class="form-group">
                <label for="mileage">Пробег:</label>
                <input type="number" id="mileage" name="mileage" class="form-control" value="@Model.MileageMotocycle" />
            </div>
            <div class="form-group">
                <label for="date">Дата:</label>
                <input type="date" id="date" name="date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" />
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>

    <script>
        // Получение текущей даты
        var currentDate = new Date();

        // Форматирование текущей даты в формат YYYY-MM-DD
        var formattedDate = currentDate.toISOString().split('T')[0];

        // Установка значения поля даты
        document.getElementById('date').value = formattedDate;
    </script>
</body>
</html>